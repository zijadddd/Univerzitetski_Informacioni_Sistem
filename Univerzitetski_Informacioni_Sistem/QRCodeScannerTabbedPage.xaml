<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Univerzitetski_Informacioni_Sistem.QRCodeScannerTabbedPage"
             xmlns:zxing="clr-namespace:ZXing.Net.Maui.Controls;assembly=ZXing.Net.MAUI"
             Title="QRCodeScannerPage">
    <VerticalStackLayout Margin="20, 20" Spacing="30" VerticalOptions="CenterAndExpand">
        <Label Text="Evidentiraj prisustvo" FontFamily="MontserratMedium" FontSize="Medium" HorizontalTextAlignment="Center" TextColor="#2a2a3e"/>
        <Image Source="qrcodescan.jpg" WidthRequest="350" />
        <Label Text="Da bi ste evidentirali prisustvo, skenirajte QR kod na ulazu u učionicu." FontFamily="MontserratLight" TextColor="#2a2a3e" HorizontalTextAlignment="Center"/>
        <Label FontFamily="MontserratLight" TextColor="#2a2a3e" HorizontalTextAlignment="Center"/>
        <Frame WidthRequest="300" CornerRadius="20" HeightRequest="50" BorderColor="Transparent" Margin="0, 10">
            <Button Command="{Binding AttendanceRecordCommand}" BackgroundColor="#0067FF" Text="Skeniraj QR kod" TextColor="White" HeightRequest="50" WidthRequest="300" FontFamily="MontserratMedium"/>
        </Frame>
    </VerticalStackLayout>
</ContentPage>